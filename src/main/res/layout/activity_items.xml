<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ntxdev.zup.DocumentsActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#ff6049"
            android:id="@+id/bar_no_connection">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem conexão com a internet"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:singleLine="false"
                android:textColor="#fff"
                android:clickable="false" />
        </FrameLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="44dp"
            class="com.ntxdev.zuptecnico.ui.SingularTabHost"
            android:id="@+id/tabhost_documents"
            android:background="#ddd"
            android:visibility="gone" />

        <com.ntxdev.zuptecnico.ui.InfinityScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/items_scroll"
            android:layout_gravity="center_horizontal"
            android:background="#f2f2f2"
            android:visibility="visible"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/inventory_items_container"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/activity_items_loading"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="100dp"
                        android:id="@+id/activity_items_loading_image"
                        android:layout_gravity="center"
                        android:src="@drawable/sync_big"
                        android:layout_marginTop="100dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aguarde enquanto os dados são carregados"
                        android:id="@+id/textView7"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#888"
                        android:layout_marginTop="30dp" />
                    </LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_items_loading_old"
                    android:layout_gravity="center_horizontal"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Não há itens para exibir"
                    android:id="@+id/activity_items_noitems"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:visibility="gone" />
            </LinearLayout>
        </com.ntxdev.zuptecnico.ui.InfinityScrollView>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/items_mapcontainer_container"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/items_mapcontainer"
                android:visibility="visible"
                android:clickable="false"
                android:background="#f2f2f2"></FrameLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_map_progress"
                android:layout_gravity="bottom|left"
                android:indeterminate="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para visualizar os itens desta região, favor aproximar o mapa"
                android:id="@+id/items_map_toomany"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="50dp"
                android:background="#dd000000"
                android:textColor="#fff"
                android:padding="3dp"
                android:visibility="gone"
                android:gravity="center_horizontal" />

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:padding="7dp"
            android:id="@+id/items_select_buttons"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecione os itens que deseja adicionar ao documento"
                android:id="@+id/textView0"
                android:gravity="center_horizontal"
                android:layout_marginBottom="7dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:id="@+id/textView2"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="#bababa"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="#fff"
                    android:onClick="selectCancel"
                    android:clickable="true" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Adicionar"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:background="@color/zupblue"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#fff"
                    android:onClick="selectDone"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
