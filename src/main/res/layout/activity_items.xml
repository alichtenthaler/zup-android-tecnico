<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ntxdev.zup.DocumentsActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="#ff6049"
            android:id="@+id/bar_no_connection">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem conexÃ£o com a internet"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:singleLine="false"
                android:textColor="#fff"
                android:clickable="false" />
        </FrameLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="44dp"
            class="com.ntxdev.zuptecnico.ui.SingularTabHost"
            android:id="@+id/tabhost_documents"
            android:background="#ddd"
            android:visibility="gone" />

        <com.ntxdev.zuptecnico.ui.InfinityScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/items_scroll"
            android:layout_gravity="center_horizontal"
            android:background="#f2f2f2"
            android:visibility="visible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/inventory_items_container"></LinearLayout>

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_items_loading"
                    android:layout_gravity="center_horizontal"
                    android:indeterminate="true"
                    android:visibility="gone" />
            </LinearLayout>
        </com.ntxdev.zuptecnico.ui.InfinityScrollView>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/items_mapcontainer_container"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/items_mapcontainer"
                android:visibility="visible"
                android:clickable="false"
                android:background="#f2f2f2"></FrameLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_map_progress"
                android:layout_gravity="bottom|left"
                android:indeterminate="true" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
