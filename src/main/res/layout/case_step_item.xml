<?xml version="1.0" encoding="utf-8"?>
<com.ntxdev.zuptecnico.ui.CustomRipple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rv_color="@color/document_list_selecting"
    app:rv_alpha="255"
    app:rv_type="rectangle"
    android:clickable="true">
    <!-- android:background="@drawable/case_item_cell" -->
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/case_step_item_name"
        android:layout_marginLeft="60dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#222"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/case_step_item_status"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:textColor="#666"
        android:textSize="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@+id/case_step_item_owner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/case_step_item_owner"
        android:layout_marginLeft="60dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:textColor="#666"
        android:textSize="13dp"
        android:layout_below="@+id/case_step_item_name"
        android:layout_marginTop="2dp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/case_step_item_status"
        android:layout_marginTop="15dp"
        android:background="#ddd"></FrameLayout>

</RelativeLayout>
    </com.ntxdev.zuptecnico.ui.CustomRipple>